# 1: Forum Posts

    # a: Create Post
        [Request]: POST
            [Header]: {}
                accessToken: [JWT Access Token]
            [Body]: {}
                title: [Post Title]
                body: [Post Body]
                - createdAt: [Generated by Backend]

        [Response]:
            [Status]: {}
                statusCode: [200, 400, 401, 500] [success, Bad Request, unauthorize, internal server error]
            [Body]: {}
                success: [true, false]
                -if-success:
                    postData: {[Post Data returned by DB]}
                -if-unsuccess:
                    error: [Error Msg] : [Unauthorized Access, Internal Server Error]

    # b: Read Post
        @ALL [MAX: 30 at once]:
            [Request]: GET
                [Header]: {}
                    !accessToken: [JWT Access Token]

            [Response]:
                [Status]: {}
                    statusCode: [200, 500] [success, internal server error]
                [Body]: {}
                    success: [true, false]
                    -if-success:
                        postData: [{[Post Data returned by DB]}]
                    -if-unsuccess:
                        error: [Error Msg] : [Internal Server Error]

        @SPECIFIC:
            [Request]: GET
                [Params]: {}
                    id: [Post ID]
                [Header]: {}
                    !accessToken: [JWT Access Token]

            [Response]:
                [Status]: {}
                    statusCode: [200, 500] [success, internal server error]
                [Body]: {}
                    success: [true, false]
                    -if-success:
                        postData: {[Post Data returned by DB]}
                    -if-unsuccess:
                        error: [Error Msg] : [Internal Server Error]

    # c: Update Post:
        [Request]: PUT
            [Header]: {}
                accessToken: [JWT Access Token]
            [Body]: {}
                id: [PostID]
                title: [Post Title]
                body: [Post Body]
                - updatedAt: [Generated by Backend]

        [Response]:
            [Status]: {}
                statusCode: [200, 400, 401, 500] [success, bad request, unauthorize, internal server error]
            [Body]: {}
                success: [true, false]
                -if-success:
                    postData: {[Post Data returned by DB]}
                -if-unsuccess:
                    error: [Error Msg] : [Unauthorized Access, Internal Server Error]

    # d: Delete Post
    [Request]: DELETE
            [Params]: {}
                id: [Post ID]
            [Header]: {}
                accessToken: [JWT Access Token]

        [Response]:
            [Status]: {}
                statusCode: [200, 400, 401, 500] [success, bad request, unauthorize, internal server error]
