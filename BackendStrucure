# Database Model:

    @User:
        id: [Gen From FB]
        name: [UserName]
        email: [UserEmail]
        profilePicture: [UserProfilePicture]
        role: ["regular" || "author"]
        forumPosts: @Forum[]
        blogPosts: @BlogPost[]

    @ForumPosts:
        id: [UniqueID]
        title: [PostTitle]
        body: [PostBody]
        authorId: [AuthorID]
        author: @User
        likes: [[UserID]]
        dislikes: [[UserID]]
        comments: @ForumComments[]
        createdAt: [CreateTime]
        updatedAt: [UpdateTime]

    @ForumComments
        id: [UniqueID]
        comment: [CommentBody]
        authorId: [AuthorID]
        author: @User
        postId: [PostID]
        post: @ForumPosts
        createdAt: [CreateTime]
        updatedAt: [UpdateTime]

    @BlogPosts
        id: [UniqueID]
        url: [PostURL: "/blog/DD-MM-YYY/@title-{Now()[-4:]}"]
        title: [PostTitle]
        body: [PostBody]
        authorId: [AuthorID]
        author: @User
        comments: @BlogComments[]
        visits: [VisitorCount]
        createdAt: [CreateTime]
        updatedAt: [UpdateTime]

    @BlogComments
        id: [UniqueID]
        comment: [CommentBody]
        authorId: [AuthorID]
        author: @User
        postId: [PostID]
        post: @BlogPosts
        createdAt: [CreateTime]
        updatedAt: [UpdateTime]
